<p>
  <strong>Name:</strong>
  <%= @customer.name %>
</p>
 
<p>
  <strong>Description:</strong>
  <%= @customer.description %>
</p>

<h2>Orders</h2>
<% @customer.orders.each do |order| %>
  <p>
    <strong>Order:</strong>
    <%= order.name %>
  </p>
 
  <p>
    <strong>details:</strong>
    <%= order.details %>
  </p>
  
  
  <p>
  <%= link_to 'Destroy Order', [order.customer, order],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
</p>
<% end %>


<h2>Add Orders</h2>
<%= form_for([@customer, @customer.orders.build]) do |f|%>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :details %><br />
    <%= f.text_area :details %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

